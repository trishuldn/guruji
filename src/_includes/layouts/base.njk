<!doctype html>
<html lang="en" class="light">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title or 'My Online Guruji' }}</title>
  <meta name="description" content="{{ description or 'Learn, Automate, Earn' }}" />

  <style>
    /* Light mode variables */
    :root {
      --bg: #f8fafc;
      --card: #ffffff;
      --text: #0f172a;
      --muted: #475569;
      --brand: #22c55e;
      --border: rgba(203,213,225,.8);
    }
    /* Dark mode variables */
    .dark {
      --bg: #0b1020;
      --card: #0f172a;
      --text: #f8fafc;
      --muted: #94a3b8;
      --brand: #22c55e;
      --border: rgba(148,163,184,.2);
    }

    body {
      margin: 0;
      background: var(--bg);
      color: var(--text);
      font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
      transition: background .3s, color .3s;
    }

    a { color: inherit; text-decoration: none }
    .btn {
      display:inline-flex;gap:8px;align-items:center;
      padding:12px 18px;border-radius:14px;
      background:linear-gradient(135deg,var(--brand),#16a34a);
      color:#fff;font-weight:700;
      box-shadow:0 2px 10px rgba(0,0,0,.1)
    }
    .ghost {
      padding:10px 14px;border:1px solid var(--border);
      border-radius:12px;color:var(--muted)
    }
    .grid{display:grid;gap:20px}
    .three{grid-template-columns:repeat(3,1fr)}
    .card{
      background:var(--card);
      border:1px solid var(--border);
      border-radius:18px;
      padding:20px;
      box-shadow:0 2px 8px rgba(0,0,0,.05);
      transition: background .3s, border .3s, color .3s;
    }

    nav a{font-weight:500;transition:.2s}
    nav a:hover{color:var(--brand)}
    header.sticky{
      position:sticky;top:0;z-index:50;
      background:rgba(255,255,255,.95);
      backdrop-filter:blur(12px);
      border-bottom:1px solid var(--border);
      transition: background .3s;
    }
    .dark header.sticky {
      background:rgba(11,16,32,.9);
    }

    footer{
      padding:40px 20px;
      background:#f1f5f9;
      border-top:1px solid var(--border);
      transition: background .3s;
    }
    .dark footer {
      background:#0f172a;
    }
    footer .cols{
      display:grid;
      grid-template-columns:repeat(auto-fit,minmax(200px,1fr));
      gap:20px;max-width:1100px;margin:0 auto
    }
    footer h4{margin-bottom:12px;color:var(--brand)}
    footer a{display:block;margin-bottom:8px;color:var(--muted);font-size:.95rem}
    footer a:hover{color:var(--brand)}
  </style>

  <script defer src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
</head>
<body>
  <header class="sticky">
    <nav style="max-width:1200px;margin:0 auto;padding:16px 24px;display:flex;align-items:center;justify-content:space-between">
      <a href="/" style="font-weight:800;font-size:1.25rem;color:var(--brand)">MyOnlineGuruji</a>
      <div style="display:flex;gap:20px;align-items:center">
        <a href="/tools/">Tools</a>
        <a href="/products/">Products</a>
        <a href="/blog/">Blog</a>
        <a href="/admin/" class="ghost">CMS</a>
        <button id="themeToggle" class="ghost" style="cursor:pointer">üåô</button>
        <a class="btn" href="/products/">Start Now</a>
      </div>
    </nav>
  </header>

  <main class="wrap">
    {{ content | safe }}
  </main>

  <footer>
    <div class="cols">
      <div>
        <h4>MyOnlineGuruji</h4>
        <p style="color:var(--muted);font-size:.95rem">Upskill with AI tools, templates, and premium resources. Build your future-ready digital business today.</p>
      </div>
      <div>
        <h4>Explore</h4>
        <a href="/tools/">Tools</a>
        <a href="/products/">Products</a>
        <a href="/blog/">Guides</a>
      </div>
      <div>
        <h4>Company</h4>
        <a href="/privacy/">Privacy Policy</a>
        <a href="/terms/">Terms of Service</a>
        <a href="/refunds/">Refund Policy</a>
      </div>
      <div>
        <h4>Connect</h4>
        <a href="#">Twitter</a>
        <a href="#">LinkedIn</a>
        <a href="#">YouTube</a>
      </div>
    </div>
    <div style="text-align:center;margin-top:30px;color:var(--muted);font-size:.9rem">
      ¬© {{ "now" | date("yyyy") }} My Online Guruji. All rights reserved.
    </div>
  </footer>

  <script>
    const toggleBtn = document.getElementById('themeToggle');
    const html = document.documentElement;

    // Load saved preference
    if(localStorage.getItem('theme') === 'dark'){
      html.classList.remove('light');
      html.classList.add('dark');
      toggleBtn.textContent = '‚òÄÔ∏è';
    }

    toggleBtn.addEventListener('click', ()=>{
      if(html.classList.contains('dark')){
        html.classList.remove('dark');
        html.classList.add('light');
        localStorage.setItem('theme','light');
        toggleBtn.textContent = 'üåô';
      } else {
        html.classList.remove('light');
        html.classList.add('dark');
        localStorage.setItem('theme','dark');
        toggleBtn.textContent = '‚òÄÔ∏è';
      }
    });
  </script>
</body>
</html>
