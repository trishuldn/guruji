<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{ title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <nav class="nav">
      <a href="/">MyOnlineGuruji</a>
      <a href="/tools/">Tools</a>
      <a href="/products/">Products</a>
      <a href="/blog/">Blog</a>
    </nav>
  </header>

  <main>
    {{ content | safe }}
  </main>

  <footer>
    <p>© 2025 MyOnlineGuruji.com — All rights reserved.</p>
  </footer>

  <!-- Razorpay checkout script (global for all pages) -->
  <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      document.querySelectorAll(".buy-btn").forEach(btn => {
        btn.addEventListener("click", async () => {
          const product = btn.dataset.product;
          const res = await fetch("/api/create-order", {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ product })
          });
          const data = await res.json();
          const options = {
            key: "{{ env.RAZORPAY_KEY_ID }}",
            amount: data.amount,
            currency: "INR",
            name: "MyOnlineGuruji",
            description: data.notes.product,
            order_id: data.id,
            handler: function () {
              alert("✅ Payment successful! Your download link will be emailed.");
            }
          };
          const rzp = new Razorpay(options);
          rzp.open();
        });
      });
    });
  </script>
</body>
</html>
